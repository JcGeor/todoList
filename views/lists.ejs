<%- include("header") -%>


  <div class="box" id="heading">
    <h1> <%=Title%> </h1>
  </div>

  <div class="box">
    <% for(var i = 0, l = newItem.length;i<l;i++) { %>
    <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" onChange="this.form.submit()" name="name" value="<%=newItem[i].name%>">
      <p><%=newItem[i].name%> </p>
      <input type="hidden" name="list" value=<%=Title%>></input>
    </form>
    </div>

    <% } %>



  <form class="item" action="/" method="post">
    <input type="text" name="text" placeholder="New Item" autocomplete="off">
    <button type="Submit" name="list" value=<%=Title %>>+</button>
  </form>
</div>
<%- include("footer") -%>
